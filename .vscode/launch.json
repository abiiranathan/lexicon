{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C/C++ Debug (gdb Launch)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/pdfsearch",
            "args": [
                "--port",
                "3000",
                "--addr",
                "localhost",
                "-c",
                "postgres://postgres@localhost/pdfsearch",
            ],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
    ]
}